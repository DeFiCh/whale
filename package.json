{
  "private": true,
  "workspaces": [
    "./modules/*",
    "./whale-server"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "standard": "ts-standard --fix",
    "test": "jest",
    "all": "npm run build && npm run standard && npm run test"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/__tests__/**",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "ts-jest": "26.5.5",
    "ts-standard": "^10.0.0",
    "typescript": ">=4.2.0",
    "wait-for-expect": "^3.0.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run standard"
    ]
  }
}
